<!-- FOOTER BENEFITS -->
<link rel="stylesheet" href="sections/new/footer-benefits/footer-benefits.css" />
<section class="footer-benefits {{ classes }}" {{#if id }}id="{{ id }}"{{/if}}>
    <div class="container">
        <div
            class="c-swiper"
            data-swiper='{
                "slidesPerView": 1,
                "spaceBetween": 20,
                "loop": true,
                "autoplay": true,
                "breakpoints": {
                    "768": {
                        "slidesPerView": 3
                    },
                    "991": {
                        "slidesPerView": 4
                    }
                }
            }'
        >
            <div class="swiper-wrapper">
                <div class="swiper-slide">
                    {{> e-icon icon="benefits-box" }}
                    <h6>Free US Shipping</h6>
                    <p>Enjoy free delivery when you spend $100 USD or more.</p>
                </div>
                <div class="swiper-slide">
                    {{> e-icon icon="benefits-restart" }}
                    <h6>Easy 30-Day Returns</h6>
                    <p>Changed your mind? Return it within 30 days for a refund.</p>
                </div>
                <div class="swiper-slide">
                    {{> e-icon icon="benefits-gift" }}
                    <h6>Qure Rewards</h6>
                    <p>Earn points every time you shop for exclusive gifts and discounts.</p>
                </div>
                <div class="swiper-slide">
                    {{> e-icon icon="benefits-headphone" }}
                    <h6>24/7 Customer Support</h6>
                    <p>Our team is ready to help you, anytime you need.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        loadScriptOnce('swiper', 'assets/js-new/swiper.js');
    });
</script>
<!-- FOOTER BENEFITS END -->
